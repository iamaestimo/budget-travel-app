<% 
  # Extract hotel info based on whether we're displaying a single offer or multiple offers
  if @hotel_offer.present?
    hotel = @hotel_offer[:hotel]
    offers = [@hotel_offer[:offer]]
  elsif @hotel_offers.present? && @hotel_offers.any?
    hotel = @hotel_offers.first
    offers = hotel[:offers]
  else
    hotel = nil
    offers = []
  end
%>

<section class="bg-blue-600 text-white py-8">
  <div class="container mx-auto px-4">
    <h1 class="text-3xl font-bold text-center mb-2">
      <i class="fas fa-hotel mr-2"></i> 
      <%= hotel.present? ? hotel[:name] : "Hotel Details" %>
    </h1>
    <% if hotel.present? %>
      <h2 class="text-lg text-center text-blue-100">
        <%= hotel[:city_code] %> | 
        <%= hotel[:rating].present? ? Array.new(hotel[:rating].to_i).map { |_| '<i class="fas fa-star text-yellow-300"></i>' }.join(' ').html_safe : 'Rating not available' %>
      </h2>
    <% end %>
  </div>
</section>

<% if hotel.present? %>
  <section class="py-8">
    <div class="container mx-auto px-4">
      <!-- Hotel Overview -->
      <div class="bg-white rounded-lg shadow-md overflow-hidden mb-8">
        <!-- Hotel Images -->
        <div class="bg-gray-200 h-64 md:h-80 relative">
          <% if hotel[:media].present? && hotel[:media].any? %>
            <div class="w-full h-full flex overflow-x-auto">
              <% hotel[:media].each do |media| %>
                <img 
                  src="<%= media[:url] %>" 
                  alt="<%= media[:description] || hotel[:name] %>" 
                  class="h-full object-cover"
                  onerror="this.onerror=null; this.src='https://placehold.co/800x600?text=Hotel+Image';"
                >
              <% end %>
            </div>
          <% else %>
            <div class="w-full h-full flex items-center justify-center bg-gray-100">
              <i class="fas fa-hotel text-gray-400 text-5xl"></i>
            </div>
          <% end %>
        </div>
        
        <!-- Hotel Info -->
        <div class="p-6">
          <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <!-- Left Column - Address & Contact -->
            <div>
              <h3 class="font-bold text-gray-800 mb-3">Location</h3>
              <div class="mb-4">
                <p class="text-gray-600 flex items-start">
                  <i class="fas fa-map-marker-alt text-red-500 mr-2 mt-1"></i>
                  <%= hotel[:address] %>
                </p>
              </div>
              
              <% if hotel[:latitude].present? && hotel[:longitude].present? %>
                <div class="mb-4">
                  <p class="text-gray-600 text-sm">
                    <i class="fas fa-compass text-blue-500 mr-2"></i>
                    Coordinates: <%= hotel[:latitude] %>, <%= hotel[:longitude] %>
                  </p>
                </div>
              <% end %>
            </div>
            
            <!-- Middle Column - Amenities -->
            <div>
              <h3 class="font-bold text-gray-800 mb-3">Amenities</h3>
              <% if hotel[:amenities].present? && hotel[:amenities].any? %>
                <div class="grid grid-cols-2 gap-2">
                  <% 
                    amenity_icons = {
                      "SWIMMING_POOL" => "swimming-pool",
                      "SPA" => "spa",
                      "RESTAURANT" => "utensils",
                      "PARKING" => "parking",
                      "PETS_ALLOWED" => "paw",
                      "WIFI" => "wifi",
                      "ROOM_SERVICE" => "concierge-bell",
                      "FITNESS_CENTER" => "dumbbell",
                      "BUSINESS_CENTER" => "briefcase",
                      "INTERNET" => "globe",
                      "COFFEE_SHOP" => "coffee",
                      "AIR_CONDITIONING" => "fan",
                      "BAR" => "glass-martini-alt",
                      "TENNIS" => "table-tennis",
                      "GOLF" => "golf-ball",
                      "KITCHEN" => "utensil-spoon",
                      "BREAKFAST" => "coffee",
                      "MEETING_ROOMS" => "handshake"
                    }
                  %>
                  <% hotel[:amenities].each do |amenity| %>
                    <div class="flex items-center">
                      <i class="fas fa-<%= amenity_icons[amenity] || 'check' %> text-blue-500 mr-2"></i>
                      <span class="text-gray-700"><%= amenity.split("_").map(&:capitalize).join(" ") %></span>
                    </div>
                  <% end %>
                </div>
              <% else %>
                <p class="text-gray-500">Amenities information not available</p>
              <% end %>
            </div>
            
            <!-- Right Column - Description -->
            <div>
              <h3 class="font-bold text-gray-800 mb-3">About this Hotel</h3>
              <% if hotel[:description].present? %>
                <p class="text-gray-700 text-sm">
                  <%= hotel[:description][0..300] %><%= hotel[:description].length > 300 ? "..." : "" %>
                </p>
              <% else %>
                <p class="text-gray-500">Description not available</p>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Hotel Offers Section -->
      <div class="mb-8">
        <h2 class="text-2xl font-bold mb-6">
          <i class="fas fa-tags text-blue-500 mr-2"></i>
          Available Offers
        </h2>
        
        <% if offers.present? && offers.any? %>
          <div class="space-y-6">
            <% offers.each do |offer| %>
              <div class="bg-white rounded-lg shadow-md overflow-hidden">
                <!-- Offer Header -->
                <div class="bg-blue-50 border-b border-blue-100 p-4 flex justify-between items-center">
                  <div>
                    <h3 class="font-bold text-gray-800">
                      <%= offer[:room_type].present? ? offer[:room_type].capitalize : "Standard Room" %>
                    </h3>
                    <p class="text-sm text-gray-600">
                      <%= offer[:board_type].present? ? offer[:board_type].capitalize : "Room only" %> 
                      | For <%= offer.dig(:guests, :adults) || params[:adults] || 2 %> guest<%= (offer.dig(:guests, :adults) || params[:adults].to_i || 2) > 1 ? 's' : '' %>
                    </p>
                  </div>
                  
                  <div class="text-right">
                    <p class="text-xl font-bold text-blue-600">
                      <%= offer.dig(:price, :total) || "N/A" %> <%= offer.dig(:price, :currency) || params[:currency] || "USD" %>
                    </p>
                    <p class="text-xs text-gray-500">
                      <%= offer.dig(:price, :variations, :average) ? "avg. per night" : "per night" %>
                    </p>
                  </div>
                </div>
                
                <!-- Offer Details -->
                <div class="p-4">
                  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <!-- Left Column -->
                    <div>
                      <!-- Room Description -->
                      <div class="mb-4">
                        <h4 class="font-semibold text-gray-700 mb-2">Room Details</h4>
                        <% if offer[:room_description].present? %>
                          <p class="text-gray-600 text-sm">
                            <%= offer[:room_description] %>
                          </p>
                        <% else %>
                          <p class="text-gray-500 text-sm">Room description not available</p>
                        <% end %>
                      </div>
                      
                      <!-- Included Services -->
                      <div class="mb-4">
                        <h4 class="font-semibold text-gray-700 mb-2">Included Services</h4>
                        <% if offer[:included_services].present? && offer[:included_services].any? %>
                          <ul class="list-disc pl-5 text-sm text-gray-600">
                            <% offer[:included_services].each do |service| %>
                              <li><%= service %></li>
                            <% end %>
                          </ul>
                        <% else %>
                          <p class="text-gray-500 text-sm">No included services specified</p>
                        <% end %>
                      </div>
                    </div>
                    
                    <!-- Right Column -->
                    <div>
                      <!-- Price Breakdown -->
                      <div class="mb-4">
                        <h4 class="font-semibold text-gray-700 mb-2">Price Details</h4>
                        <div class="space-y-1 text-sm">
                          <div class="flex justify-between">
                            <span class="text-gray-600">Base rate:</span>
                            <span class="font-medium">
                              <%= offer.dig(:price, :base) || "N/A" %> <%= offer.dig(:price, :currency) || params[:currency] || "USD" %>
                            </span>
                          </div>
                          
                          <% if offer.dig(:price, :taxes).present? && offer.dig(:price, :taxes).any? %>
                            <% offer[:price][:taxes].each do |tax| %>
                              <div class="flex justify-between">
                                <span class="text-gray-600">
                                  <%= tax[:code] || "Tax" %>:
                                </span>
                                <span class="font-medium">
                                  <%= tax[:amount] %> <%= tax[:currency] || offer.dig(:price, :currency) || "USD" %>
                                  <%= tax[:included] ? "(included)" : "" %>
                                </span>
                              </div>
                            <% end %>
                          <% end %>
                          
                          <div class="flex justify-between pt-1 border-t border-gray-200 font-semibold">
                            <span>Total:</span>
                            <span class="text-blue-600">
                              <%= offer.dig(:price, :total) || "N/A" %> <%= offer.dig(:price, :currency) || params[:currency] || "USD" %>
                            </span>
                          </div>
                        </div>
                      </div>
                      
                      <!-- Cancellation Policy -->
                      <div class="mb-4">
                        <h4 class="font-semibold text-gray-700 mb-2">Cancellation Policy</h4>
                        <% if offer.dig(:policies, :cancellation).present? && offer.dig(:policies, :cancellation).any? %>
                          <% policy = offer[:policies][:cancellation].first %>
                          <p class="text-sm text-gray-600">
                            <% if policy[:type] == "FREE_CANCELLATION" %>
                              <span class="text-green-600">Free cancellation</span>
                              <% if policy[:deadline].present? %>
                                until <%= DateTime.parse(policy[:deadline]).strftime("%b %d, %Y at %H:%M") %>
                              <% end %>
                            <% else %>
                              Cancellation fee: <%= policy[:amount] %> <%= policy[:currency] %>
                              <% if policy[:deadline].present? %>
                                after <%= DateTime.parse(policy[:deadline]).strftime("%b %d, %Y at %H:%M") %>
                              <% end %>
                            <% end %>
                          </p>
                        <% else %>
                          <p class="text-gray-500 text-sm">Cancellation policy not available</p>
                        <% end %>
                      </div>
                    </div>
                  </div>
                </div>
                
                <!-- Offer Footer with Booking Button -->
                <div class="border-t border-gray-200 p-4 flex justify-end">
                  <a href="#" class="flex items-center justify-center bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-6 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 cursor-pointer transition duration-200">
                    <i class="fas fa-shopping-cart mr-2"></i>
                    Book Now
                  </a>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="bg-yellow-100 border-l-4 border-yellow-500 text-yellow-800 p-6 rounded-md">
            <div class="flex justify-center items-center">
              <i class="fas fa-exclamation-triangle text-2xl text-yellow-600 mr-3"></i>
              <span>No offers found for this hotel. Please try a different search or contact the hotel directly.</span>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </section>
<% elsif @error.present? %>
  <section class="py-8">
    <div class="container mx-auto px-4">
      <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 relative rounded-md">
        <button class="absolute top-0 right-0 mt-2 mr-2 text-red-700">&times;</button>
        <div class="flex items-center">
          <i class="fas fa-exclamation-circle mr-3 text-red-500 text-xl"></i>
          <div>
            <p class="font-bold">Error</p>
            <p><%= @error %></p>
          </div>
        </div>
      </div>
    </div>
  </section>
<% else %>
  <section class="py-8">
    <div class="container mx-auto px-4">
      <div class="bg-yellow-100 border-l-4 border-yellow-500 text-yellow-800 p-6 rounded-md">
        <div class="flex justify-center items-center">
          <i class="fas fa-exclamation-triangle text-2xl text-yellow-600 mr-3"></i>
          <span>Hotel information not found. Please return to search and try again.</span>
        </div>
      </div>
    </div>
  </section>
<% end %>

<!-- Navigation Links -->
<section class="pb-8">
  <div class="container mx-auto px-4">
    <div class="text-center">
      <%= link_to hotel_search_path, class: "text-blue-600 hover:text-blue-800" do %>
        <i class="fas fa-search mr-1"></i> New Hotel Search
      <% end %>
      <span class="mx-2 text-gray-300">|</span>
      <%= link_to :back, class: "text-blue-600 hover:text-blue-800" do %>
        <i class="fas fa-arrow-left mr-1"></i> Back to Results
      <% end %>
      <span class="mx-2 text-gray-300">|</span>
      <%= link_to root_path, class: "text-blue-600 hover:text-blue-800" do %>
        <i class="fas fa-home mr-1"></i> Home
      <% end %>
    </div>
  </div>
</section>